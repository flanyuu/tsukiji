<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <!-- Header naranja igual que Guardados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F5A623"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PROPIEDADES"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:fontFamily="sans-serif-condensed" />

        <!-- Botón agregar propiedad -->
        <ImageView
            android:id="@+id/btn_agregar_propiedad"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_input_add"
            android:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Agregar propiedad" />

    </LinearLayout>

    <!-- Filtro Renta / Venta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="4dp"
        android:background="#F2F2F2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROPIEDADES"
            android:textColor="#999999"
            android:textSize="11sp"
            android:letterSpacing="0.08"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />

        <!-- Tabs Renta / Venta -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_filter"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabBackground="@android:color/transparent"
            app:tabSelectedTextColor="#F5A623"
            app:tabTextColor="#999999"
            app:tabIndicatorColor="#F5A623"
            app:tabIndicatorHeight="2dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todas" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renta" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venta" />

        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>

    <!-- Lista de propiedades, idéntica en estilo a Guardados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_propiedades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false" />

</LinearLayout>